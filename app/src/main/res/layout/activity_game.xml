<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">
    <RelativeLayout
        android:id="@+id/gameCanvas"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>
    <TextView
        android:layout_toRightOf="@id/homescreen"
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#fff"
        android:fontFamily="@font/customfont"
        android:text="Score"/>
    <ImageView
        android:id="@+id/homescreen"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="#fff"
        android:onClick="goHome"
        android:src="@drawable/ic_home_black_24dp"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#fff"
        android:fontFamily="@font/customfont"
        android:text="Coins"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#fff"
        android:fontFamily="@font/customfont"
        android:text="Pitch"/>
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/coin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="showHideChords"
        android:src="@drawable/ic_library_music_black_24dp"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="72dp"
        layout="@layout/chrodselector"/>
</RelativeLayout>